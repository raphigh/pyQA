   "source": [
    "while True :\n",
    "    sum = 0\n",
    "    n = int(input())\n",
    "    for i in range(1,n):\n",
    "        if n % i == 0 :\n",
    "            sum += i\n",
    "    if sum == n:\n",
    "        print('its perfect')\n",
    "    else:\n",
    "        print('its not perfect')"
   ]
